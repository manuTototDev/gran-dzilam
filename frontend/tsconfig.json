{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "next.config.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}
